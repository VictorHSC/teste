# Dockerfile for Backend
FROM openjdk:17-oracle

# Define the working directory inside the container
WORKDIR /app

# Copy the Maven build file and source code
COPY . /app

#
RUN mv ./src/main/resources/application.properties ./src/main/resources/application.properties.maven
RUN mv ./src/main/resources/application.properties.docker ./src/main/resources/application.properties

# Package the backend project (Maven command to build)
RUN ./mvnw clean package -DskipTests

# Expose the port for the backend (e.g., 8081)
EXPOSE 8081

# Run the JAR file generated by Maven
CMD ["java", "-jar", "target/backend.jar"]